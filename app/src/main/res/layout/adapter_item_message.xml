<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_message_margin"
                android:background="@drawable/message_item_background"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="@dimen/item_message_padding">

    <ImageView
        android:id="@+id/iv_item_user_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="@dimen/item_user_photo_margin_h"
        android:layout_marginRight="@dimen/item_user_photo_margin_h"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_item_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_user_email_margin_v"
        android:layout_toEndOf="@+id/iv_item_user_photo"
        android:layout_toRightOf="@id/iv_item_user_photo"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_item_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_user_email"
        android:layout_toEndOf="@+id/iv_item_user_photo"
        android:layout_toRightOf="@id/iv_item_user_photo"/>

</RelativeLayout>